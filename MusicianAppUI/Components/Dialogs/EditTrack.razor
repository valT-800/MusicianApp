<MudDialog>
    <DialogContent>
        <MudTextField T="string" @bind-Value="@Track.Name" Label="Name"></MudTextField>
        <MudSelect T="string" @bind-Value="@Track.Lyrics" Label="Favorite Coffee" AnchorOrigin="Origin.BottomCenter">
            <MudSelectItem Value="@Track.Lyrics"/>
            <MudSelectItem Value="@("Cafe Latte")"/>
            <MudSelectItem Value="@("Espresso")"/>
            <MudSelectItem Value="@("Irish Coffee")"/>
        </MudSelect>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>

    </DialogActions>
</MudDialog>
@code {
    
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public TrackModel Track { get; set; } = new();
    
    void Submit() => MudDialog?.Close(DialogResult.Ok(Track));
    
    void Cancel() => MudDialog?.Cancel();
}